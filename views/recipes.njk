{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block header %}

    <header>
        <a href="/">
            <img src="/img/logo.png">
        </a>
        <a href="/">Home</a>
        <a href="/about">Sobre</a>
        <a href="/recipes" class="ativa">Receitas</a>
    </header>

{% endblock %}

{% block content %}
    <section id="conteudo">

        <div class="receitas2">

            {% for recipe in recipes %}

                <div class="receita" id="{{recipe.id}}">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                    <div class="modal-content">
                        <h4>{{recipe.title}}</h4>
                        <p>por
                            {{recipe.author}}</p>
                    </div>
                </div>

            {% endfor %}

        </div>
    </section>
    <script src="scripts.js"></script>
{% endblock %}}